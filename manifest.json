{
  "manifest_version": 3,
  "name": "JAV Code Quick-View",
  "version": "2.0",
  "description": "Hover over a link to search the code in another tab.",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JAV Code Quick-View Settings",
    "default_icon": {
      "48": "icon.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "image-tooltip-extension@example.com"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
