{
  "manifest_version": 3,
  "name": "JAV Code Quick-View",
  "version": "1.2",
  "description": "Recognizes JAV codes on pages and displays image search results in a sidebar.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.google.com/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "image-tooltip-extension@example.com"
    }
  },
  "action": {
    "default_icon": {
      "48": "icon.svg"
    },
    "default_title": "JAV Code Quick-View Settings",
    "default_popup": "options.html"
  }
}
